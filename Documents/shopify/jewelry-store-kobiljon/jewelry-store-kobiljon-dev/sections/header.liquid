{{ 'style.header.css' | asset_url | stylesheet_tag }}

<header class="header">
  <nav class="header__nav">
      <ul class="header__ul">
        <li class="header__li"><a class="header__nav-link p3">shop</a></li>
        <li class="header__li"><a class="header__nav-link p3">about</a></li>
        <li class="header__li"><a class="header__nav-link p3">contact</a></li>
        <li class="header__li"><a class="header__nav-link p3">archive</a></li>
      </ul>
      <div class="header__logo-container">
        <img class="header__logo" src="{{ section.settings.logo.src | img_url: '290x160' }}" alt="{{ section.settings.logoAlt }}">
      </div>
      <ul class="header__ul">
        <li class="header__li"><a class="header__nav-link p3">search</a></li>
        <li class="header__li"><a class="header__nav-link p3">account</a></li>
        <li class="header__li"><a class="header__nav-link p3">cart(<span>0</span>)</a></li>
      </ul>
  </nav>
  <div class="header__center">
    <div class="header__center-text">
      <h1 class="h1 mb-1">{{ section.settings.heading }}</h1>
      <div class="header__center-btn">
        <a class="header__center-btn-url p3">{{ section.settings.button }}</a>
      </div>
    </div>
    <div class="header__center-arrow-container">
      <img src="https://cdn.shopify.com/s/files/1/0679/0974/6990/files/icon-down-arrow.svg?v=1668500524" class="header__center-arrow" >
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "text",
      "id": "logoAlt",
      "label": "t:sections.header.settings.logoAlt.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.header.settings.heading.label"
    },
    {
      "type": "text",
      "id": "button",
      "label": "t:sections.header.settings.heading.label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:sections.header.settings.heading.label"
    }
  ]
}
{% endschema %}
